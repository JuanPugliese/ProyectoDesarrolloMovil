<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragments.CrearHistoriaFragment">

        <TextView
            android:id="@+id/tituloFormulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historia Clínica"
            android:textColor="@color/bottom_nav_text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_fragment2"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <!-- Datos del Paciente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nombre completo"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/nombrePacienteInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del paciente"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Número de documento"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/idDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Documento de identidad"
                android:inputType="number"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Teléfono"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/idTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de contacto"
                android:inputType="phone"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:textSize="14sp" />

            <!-- Datos Profesional -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Profesional"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/profesionalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del profesional"
                android:inputType="text"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Motivo de Consulta"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/motivoInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el motivo de consulta"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:textSize="14sp"/>

            <!-- Tratamiento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tratamiento"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tratamientoInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el tratamiento"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:textSize="14sp"/>


            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/botonAzul"
                    android:text="Guardar"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/botonRojo"
                    android:text="Cancelar"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>